{
  "name": "ifcastle/aql-storage",
  "description": "Storage contracts for Abstract Query Language",
  "keywords": [
    "aql",
    "query",
    "language",
    "storage"
  ],
  "type": "ifcastle-aql-package",
  "license": "MIT",
  "authors": [
    {
      "name": "Edmond Dantes",
      "email": "edmondifthen@proton.me"
    }
  ],
  "require": {
    "php": ">=8.4",
    "ifcastle/aql-dsl": "*",
    "ifcastle/aql-result": "*",
    "ifcastle/di": "^0.6.0",
    "ifcastle/exceptions": "^5.0"
  },
  "autoload": {
    "psr-4": {
      "IfCastle\\AQL\\Storage\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "psr-4": {
      "IfCastle\\AQL\\Storage\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^11.2",
    "rector/rector": "^1.2",
    "ifcastle/codestyle": "^0.2.0"
  },
  "scripts": {
    "test": "vendor/bin/phpunit ./tests",
    "cs-fix": "php-cs-fixer fix",
    "cs-check": "php-cs-fixer fix --dry-run --diff",
    "rector": "rector process",
    "rector-dry": "rector process --dry-run"
  },
  "extra": {
    "branch-alias": {
      "dev-main": "0.8.x-dev"
    }
  }
}
